{
    "manifestVersion": 1,
    "id": "vsts-open-work-items-in-excel",
    "version": "0.1.0",
    "name": "VSTS Open in Excel",
    "scopes": [ "vso.work", "vso.work_write" ],
    "description": "This extension opens work items in Excel from VSTS",
    "publisher": "MicrosoftDeveloper",
    "icons": {
        "default": "img/excellogo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "work items", "Excel"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://bit.ly"
        },
        "learn": {
            "uri": "https://bit.ly"
        },
        "support": {
            "uri": "https://bit.ly"
        }
    },
    "branding": {
        "color": "rgb(92, 45, 145)",
        "theme": "dark"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "action.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "openQueryAction",
            "type": "ms.vss-work-web.action",
            "description": "Open in Excel",
            "targets": [
                "ms.vss-work-web.work-item-query-menu"
            ],
            "properties": {
            	"text": "Open in Excel",
            	"title": "Requires Visual Studio '15'",
                "uri": "action.html"
            }
        },
        {
            "id": "openWorkItemsAction",
            "type": "ms.vss-work-web.action-provider",
            "description": "Open in Excel",
            "targets": [
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "text": "Open in Excel",
                "title": "Open in Excel",
                "icon": "img/miniexcellogo.png",
                "uri": "action.html"
            }
        },
        {
            "id": "openQueryOnToolbarAction",
            "type": "ms.vss-work-web.action",
            "description": "Open in Excel",
            "targets": [
                "ms.vss-work-web.work-item-query-toolbar-menu"
            ],
            "properties": {
                "text": "Open in Excel",
                "title": "ms.vss-work-web.work-item-query-toolbar-menu",
                "toolbarText": "DUMMY ACTION",
                "uri": "action.html"
            }
        }
    ]
}
